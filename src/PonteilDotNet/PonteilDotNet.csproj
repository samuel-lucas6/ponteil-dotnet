<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Version>1.0.0</Version>
        <Authors>Samuel Lucas</Authors>
        <Description>A .NET implementation of Ponteil, a very fast, compact XOF/hash function/PRF based on AEGIS.</Description>
        <Copyright>Copyright (c) 2024 Samuel Lucas</Copyright>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/samuel-lucas6/ponteil-dotnet</PackageProjectUrl>
        <RepositoryUrl>https://github.com/samuel-lucas6/ponteil-dotnet</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>ponteil aegis aegis128l aegis256 aes xof hash prf mac</PackageTags>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    </PropertyGroup>

</Project>
